<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.ToolbarTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/inter_bold</item>
    </style>

    <style name="AppTheme.TransactionsTitle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorLightGray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/oxygen_bold</item>
    </style>

    <style name="AppTheme.Content" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorLightGray</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="AppTheme.SearchResult" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorLightGray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/oxygen</item>
    </style>

    <style name="AppTheme.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/inter_bold</item>
    </style>
</resources>
