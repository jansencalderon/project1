<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.TransactionsTitle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorSolidGray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.TransactionsContent" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorLightGray</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
